@{
    ViewData["Title"] = "Secure Page";
}

<div class="container mt-1">
    <div class="mx-auto" style="max-width: 800px;">
        <div class="card shadow border-0 rounded">
            <div class="card-body">
                <h2 class="card-title mb-3 text-primary">Access Authorized</h2>
                <p class="card-text fs-5">
                    You have successfully logged in and gained access to this secure area of the application.
                </p>
                <p class="card-text">
                    Please note that this section contains confidential information intended only for authorized users.
                    To maintain security, do not share your login credentials or leave your session unattended.
                </p>
                <hr />
                <p class="text-muted small mb-0">
                    For account management, password updates, or to log out safely, please use the options provided in the navigation menu.
                </p>
            </div>
        </div>
    </div>
</div>