
@model TenantsManagementApp.Models.Tenant

@{
    ViewData["Title"] = "Tenant Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header  text-white rounded-top-4" style="background-color: #002244;>
                    <h3 class="mb-0 text-center" ">Tenant Details</h3>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.LeaseStartDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LeaseStartDate)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.LeaseEndDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LeaseEndDate)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.SecurityDeposit)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SecurityDeposit)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.IsActive)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.IsActive)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.User)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.FirstName)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.House)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.House.Name)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.UpdatedAt)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdatedAt)</dd>
                    </dl>
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn text-white px-4" style="background-color: #002244;">Edit</a>
                        <a asp-action="Index" class="btn btn-success px-4">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
