@model TenantsManagementApp.Models.House

@{
    ViewData["Title"] = "Create House";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header  text-white rounded-top-4" style="background-color: #002244;">
                    <h3 class="mb-0 text-center">Add New House</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/Houses/Create" id="createHouseForm" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <strong>Errors:</strong>
                                <ul>
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }
                        @* <!-- Debug Info -->
                        <div class="alert alert-warning mb-3">
                            <strong>Debug:</strong>
                            <div>Model.LandlordId: <span id="debugModelLandlordId">@Model.LandlordId</span></div>
                            <div>Posted LandlordId: <span id="debugPostedLandlordId"></span></div>
                        </div> *@
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Landlord" class="form-label fw-semibold"></label>
                                <select asp-for="LandlordId" class="form-select" asp-items="ViewBag.LandlordId">
                                    <option value="">Select a Landlord</option>
                                </select>
                                <span asp-validation-for="LandlordId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-semibold"></label>
                                <input asp-for="Name" class="form-control" required />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Location" class="form-label fw-semibold"></label>
                                <input asp-for="Location" class="form-control" />
                                <span asp-validation-for="Location" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Model" class="form-label fw-semibold"></label>
                                <input asp-for="Model" class="form-control" />
                                <span asp-validation-for="Model" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label fw-semibold"></label>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" required />
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label fw-semibold"></label>
                                <input asp-for="Status" class="form-control" />
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="IsActive" />
                                    <label class="form-check-label" asp-for="IsActive"></label>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end mt-4">
                            <input type="submit" value="Create" class="btn text-white px-4 me-2" style="background-color: #002244;"/>
                            <a asp-action="Index" class="btn btn-success px-4">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Show posted LandlordId in debug section
            var postedLandlordId = $("#LandlordId").val();
            $("#debugPostedLandlordId").text(postedLandlordId);
            $("#LandlordId").change(function () {
                $("#debugPostedLandlordId").text($(this).val());
            });

            $("#createHouseForm").validate({
                rules: {
                    LandlordId: {
                        required: true,
                        min: 1
                    }
                },
                messages: {
                    LandlordId: {
                        required: "Please select a landlord.",
                        min: "Please select a valid landlord."
                    }
                },
                errorPlacement: function (error, element) {
                    if (element.attr("name") === "LandlordId") {
                        error.insertAfter(element.next(".text-danger"));
                    } else {
                        error.insertAfter(element);
                    }
                },
                invalidHandler: function(event, validator) {
                    var errors = validator.numberOfInvalids();
                    if (errors) {
                        var messages = validator.errorList.map(function(e) { return e.message; });
                        console.error("Validation errors:", messages);
                        alert("Validation errors:\n" + messages.join("\n"));
                    }
                },
                submitHandler: function (form) {
                    var landlordId = $("#LandlordId").val();
                    $("#debugPostedLandlordId").text(landlordId);
                    if (!landlordId || landlordId === "") {
                        $("#LandlordId").next(".text-danger").text("Please select a landlord.");
                        console.error("LandlordId is missing or invalid.");
                        alert("Please select a landlord.");
                        return false;
                    }
                    form.submit();
                }
            });
        });
    </script>
}