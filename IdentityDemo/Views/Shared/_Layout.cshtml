@{
    ViewData["Title"] = ViewData["Title"] ?? "TenantsManagement System";
    var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    var isAdmin = User?.IsInRole("Admin") ?? false;
    var isManager = User?.IsInRole("Manager") ?? false;
    var isStaff = isAdmin || isManager;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TenantsManagement System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
</head>

<body>
    @if (isAdmin)
    {
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <nav class="sidebar" id="sidebar"
            style="position: fixed; top: 0; left: 0; height: 100vh; width: 280px; background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%); transition: all 0.3s ease; z-index: 1000; border-right: 1px solid #334155; overflow-y: auto;">
            <div class="sidebar-header"
                style="padding: 1.5rem 1rem; border-bottom: 1px solid #334155; display: flex; align-items: center; justify-content: space-between;">
                <a href="@Url.Action("Index", "Home")"
                    style="color: white; font-weight: 700; font-size: 1.25rem; text-decoration: none; display: flex; align-items: center;">
                    <i class="bi bi-building me-2"></i>
                    <span class="brand-text">TMS SYSTEM</span>
                </a>
                <button class="sidebar-toggle" id="sidebarToggle"
                    style="background: none; border: none; color: white; font-size: 1.2rem; cursor: pointer; padding: 0.5rem; border-radius: 0.375rem;">
                    <i class="bi bi-list"></i>
                </button>
            </div>

            <div class="sidebar-nav" style="padding: 1rem 0;">
                <div class="nav-section" style="margin-bottom: 1.5rem;">
                    <div class="nav-item" style="margin-bottom: 0.25rem;">
                        <a class="nav-link" href="@Url.Action("Index", "Home")"
                            style="color: #e2e8f0; text-decoration: none; padding: 0.75rem 1rem; display: flex; align-items: center; font-weight: 500;">
                            <i class="bi bi-house nav-icon"
                                style="width: 1.25rem; height: 1.25rem; margin-right: 0.75rem; flex-shrink: 0;"></i>
                            <span class="nav-text">Dashboard</span>
                        </a>
                    </div>
                </div>

                <div class="nav-section" style="margin-bottom: 1.5rem;">
                    <div class="nav-section-title dropdown-toggle" data-bs-toggle="dropdown"
                        style="color: #64748b; font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; padding: 0.75rem 1rem; margin-bottom: 0.5rem; cursor: pointer; display: flex; align-items: center;">
                        <i class="bi bi-building nav-icon me-2"
                            style="width: 1.25rem; height: 1.25rem; flex-shrink: 0;"></i>
                        <span>Management </span>
                    </div>
                    <ul class="dropdown-menu"
                        style="background: #1e293b; border: none; margin: 0; padding: 0.5rem 0; width: 100%;">
                        <li class="nav-item" style="margin-bottom: 0.25rem;">
                            <a class="nav-link dropdown-item" href="@Url.Action("Index", "Houses")"
                                style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                <i class="bi bi-house-door nav-icon me-2"></i>Houses
                            </a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 0.25rem;">
                            <a class="nav-link dropdown-item" href="@Url.Action("Index", "MaintenanceRequests")"
                                style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                <i class="bi bi-tools nav-icon me-2"></i>Maintenance
                            </a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 0.25rem;">
                            <a class="nav-link dropdown-item" href="@Url.Action("Index", "PaymentCharges")"
                                style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                <i class="bi bi-credit-card nav-icon me-2"></i>Payment Charges
                            </a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 0.25rem;">
                            <a class="nav-link dropdown-item" href="@Url.Action("Index", "Tenants")"
                                style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                <i class="bi bi-people nav-icon me-2"></i>Tenants
                            </a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 0.25rem;">
                            <a class="nav-link dropdown-item" href="@Url.Action("Index", "Addresses")"
                                style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                <i class="bi bi-geo-alt nav-icon me-2"></i>Addresses
                            </a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 0.25rem;">
                            <a class="nav-link dropdown-item" href="@Url.Action("Index", "Landlords")"
                                style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                <i class="bi bi-person-badge nav-icon me-2"></i>Landlords
                            </a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 0.25rem;">
                            <a class="nav-link dropdown-item" href="@Url.Action("Index", "Charges")"
                                style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                <i class="bi bi-currency-dollar nav-icon me-2"></i>Charges
                            </a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 0.25rem;">
                            <a class="nav-link dropdown-item" href="@Url.Action("Index", "Payments")"
                                style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                <i class="bi bi-credit-card nav-icon me-2"></i>Payments
                            </a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 0.25rem;">
                            <a class="nav-link dropdown-item" href="@Url.Action("Index", "Notifications")"
                                style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                <i class="bi bi-bell nav-icon me-2"></i>Notifications
                            </a>
                        </li>
                    </ul>
                </div>

                @if (isStaff)
                {
                    <div class="nav-section" style="margin-bottom: 1.5rem;">
                        <div class="nav-section-title dropdown-toggle" data-bs-toggle="dropdown"
                            style="color: #64748b; font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; padding: 0.75rem 1rem; margin-bottom: 0.5rem; cursor: pointer; display: flex; align-items: center;">
                            <i class="bi bi-gear nav-icon me-2" style="width: 1.25rem; height: 1.25rem; flex-shrink: 0;"></i>
                            <span>Manage Users</span>
                        </div>
                        <ul class="dropdown-menu"
                            style="background: #1e293b; border: none; margin: 0; padding: 0.5rem 0; width: 100%;">
                            <li class="nav-item" style="margin-bottom: 0.25rem;">
                                <a class="nav-link dropdown-item" href="@Url.Action("Index", "Users")"
                                    style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                    <i class="bi bi-people nav-icon me-2"></i>Users
                                </a>
                            </li>
                        </ul>
                    </div>
                }

                @if (isAdmin)
                {
                    <div class="nav-section" style="margin-bottom: 1.5rem;">
                        <div class="nav-section-title dropdown-toggle" data-bs-toggle="dropdown"
                            style="color: #64748b; font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; padding: 0.75rem 1rem; margin-bottom: 0.5rem; cursor: pointer; display: flex; align-items: center;">
                            <i class="bi bi-shield nav-icon me-2" style="width: 1.25rem; height: 1.25rem; flex-shrink: 0;"></i>
                            <span>Administration</span>
                        </div>
                        <ul class="dropdown-menu"
                            style="background: #1e293b; border: none; margin: 0; padding: 0.5rem 0; width: 100%;">
                            <li class="nav-item" style="margin-bottom: 0.25rem;">
                                <a class="nav-link dropdown-item" href="@Url.Action("Index", "Roles")"
                                    style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                    <i class="bi bi-shield-check nav-icon me-2"></i>Roles
                                </a>
                            </li>
                            <li class="nav-item" style="margin-bottom: 0.25rem;">
                                <a class="nav-link dropdown-item" href="@Url.Action("Index", "Claims")"
                                    style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                    <i class="bi bi-key nav-icon me-2"></i>Claims
                                </a>
                            </li>
                        </ul>
                    </div>
                }

                <div class="nav-section" style="margin-bottom: 1.5rem;">
                    <div class="nav-section-title dropdown-toggle" data-bs-toggle="dropdown"
                        style="color: #64748b; font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; padding: 0.75rem 1rem; margin-bottom: 0.5rem; cursor: pointer; display: flex; align-items: center;">
                        <i class="bi bi-question-circle nav-icon me-2"
                            style="width: 1.25rem; height: 1.25rem; flex-shrink: 0;"></i>
                        <span>Support</span>
                    </div>
                    <ul class="dropdown-menu"
                        style="background: #1e293b; border: none; margin: 0; padding: 0.5rem 0; width: 100%;">
                        <li class="nav-item" style="margin-bottom: 0.25rem;">
                            <a class="nav-link dropdown-item" href="@Url.Action("Contact", "Home")"
                                style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                <i class="bi bi-envelope nav-icon me-2"></i>Contact
                            </a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 0.25rem;">
                            <a class="nav-link dropdown-item" href="@Url.Action("Privacy", "Home")"
                                style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                <i class="bi bi-shield-lock nav-icon me-2"></i>Privacy Policy
                            </a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 0.25rem;">
                            <a class="nav-link dropdown-item" href="@Url.Action("Terms", "Home")"
                                style="color: #e2e8f0; padding: 0.75rem 2rem;">
                                <i class="bi bi-file-text nav-icon me-2"></i>Terms of Service
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            @if (isAuthenticated)
            {
                <div class="user-section"
                    style="position: absolute; bottom: 0; left: 0; right: 0; padding: 1rem; border-top: 1px solid #334155; background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);">
                    <div class="dropdown">
                        <a class="user-info" href="#" data-bs-toggle="dropdown" aria-expanded="false"
                            style="display: flex; align-items: center; color: white; text-decoration: none; padding: 0.75rem; border-radius: 0.5rem;">
                            <div class="user-avatar"
                                style="width: 2.5rem; height: 2.5rem; border-radius: 50%; background: linear-gradient(135deg, #002244, #003366); display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; margin-right: 0.75rem; flex-shrink: 0;">
                                @(User?.Identity?.Name?.Substring(0, 1).ToUpper() ?? "U")
                            </div>
                            <div class="user-details" style="flex-grow: 1; min-width: 0;">
                                <div class="user-name"
                                    style="font-weight: 600; font-size: 0.875rem; margin-bottom: 0.125rem; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    @User?.Identity?.Name</div>
                                <div class="user-role"
                                    style="font-size: 0.75rem; color: #64748b; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    @if (isAdmin)
                                    {
                                        <span>Administrator</span>
                                    }
                                    else if (isManager)
                                    {
                                        <span>Manager</span>
                                    }
                                    else
                                    {
                                        <span>User</span>
                                    }
                                </div>
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end"
                            style="border: none; box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15); border-radius: 0.5rem;">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                                    <i class="bi bi-person-lines-fill me-2"></i> Profile
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider" />
                            </li>
                            <li>
                                <form method="post" asp-controller="Account" asp-action="Logout" class="px-3 py-1">
                                    <button type="submit"
                                        class="btn btn-link text-decoration-none w-100 text-start text-danger">
                                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            }
        </nav>
    }

    <div class="main-content"
        style="margin-left: @(isAdmin ? "280px" : "0"); transition: margin-left 0.3s ease; min-height: 100vh; background-color: #f8fafc;">
        <div class="top-bar"
            style="background: white; padding: 1rem 2rem; border-bottom: 1px solid #e2e8f0; box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1); display: flex; align-items: center; justify-content: space-between;">
            <div style="display: flex; align-items: center;">
                @if (isAdmin)
                {
                    <button class="mobile-menu-btn me-3" id="mobileMenuBtn"
                        style="display: none; background: none; border: none; font-size: 1.5rem; color: #1e293b; cursor: pointer;">
                        <i class="bi bi-list"></i>
                    </button>
                }
                <h1 style="font-size: 1.5rem; font-weight: 600; color: #1e293b; margin: 0;">@ViewData["Title"]</h1>
            </div>

            @if (!isAuthenticated)
            {
                <div style="display: flex; gap: 1rem; align-items: center;">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary"
                        style="padding: 0.5rem 1rem; border-radius: 0.375rem; font-weight: 500;">Login</a>
                    <a href="@Url.Action("Register", "Account")" class="btn btn-primary"
                        style="padding: 0.5rem 1rem; border-radius: 0.375rem; font-weight: 500;">Register</a>
                </div>
            }
        </div>

        <div class="content-area" style="padding: 2rem;">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (isAdmin)
    {
        <script>
            (function () {
                'use strict';

                const SidebarManager = {
                    elements: {
                        sidebar: null,
                        sidebarToggle: null,
                        mobileMenuBtn: null,
                        sidebarOverlay: null,
                        mainContent: null
                    },

                    config: {
                        mobileBreakpoint: 768,
                        collapsedWidth: '70px',
                        expandedWidth: '280px',
                        transitionDuration: '0.3s'
                    },

                    init() {
                        this.cacheDOM();
                        this.bindEvents();
                        this.handleMobileMenu();
                        this.initializeSidebarState();
                        this.setupActiveLink();
                    },

                    cacheDOM() {
                        this.elements.sidebar = document.getElementById('sidebar');
                        this.elements.sidebarToggle = document.getElementById('sidebarToggle');
                        this.elements.mobileMenuBtn = document.getElementById('mobileMenuBtn');
                        this.elements.sidebarOverlay = document.getElementById('sidebarOverlay');
                        this.elements.mainContent = document.querySelector('.main-content');
                    },

                    bindEvents() {
                        if (this.elements.sidebarToggle) {
                            this.elements.sidebarToggle.addEventListener('click', () => this.toggleSidebar());
                        }
                        if (this.elements.mobileMenuBtn) {
                            this.elements.mobileMenuBtn.addEventListener('click', () => this.toggleMobileMenu());
                        }
                        if (this.elements.sidebarOverlay) {
                            this.elements.sidebarOverlay.addEventListener('click', () => this.hideMobileMenu());
                        }
                        window.addEventListener('resize', () => this.handleMobileMenu());
                        this.setupNavHoverEffects();
                    },

                    isMobile() {
                        return window.innerWidth <= this.config.mobileBreakpoint;
                    },

                    applySidebarState(isCollapsed) {
                        if (!this.elements.sidebar || !this.elements.mainContent) return;

                        const textElements = document.querySelectorAll('.brand-text, .nav-text, .nav-section-title, .user-details');
                        const navLinks = document.querySelectorAll('.nav-link');
                        const navIcons = document.querySelectorAll('.nav-icon');
                        const userAvatar = document.querySelectorAll('.user-avatar');

                        this.elements.sidebar.classList.toggle('collapsed', isCollapsed);
                        this.elements.sidebar.style.width = isCollapsed ? this.config.collapsedWidth : this.config.expandedWidth;
                        this.elements.mainContent.style.marginLeft = isCollapsed ? this.config.collapsedWidth : this.config.expandedWidth;

                        textElements.forEach(el => {
                            el.style.opacity = isCollapsed ? '0' : '1';
                            el.style.width = isCollapsed ? '0' : 'auto';
                            el.style.overflow = isCollapsed ? 'hidden' : 'visible';
                        });

                        navLinks.forEach(link => {
                            link.style.justifyContent = isCollapsed ? 'center' : 'flex-start';
                            link.style.padding = isCollapsed ? '0.75rem' : '0.75rem 1rem';
                        });

                        navIcons.forEach(icon => {
                            icon.style.marginRight = isCollapsed ? '0' : '0.75rem';
                        });

                        userAvatar.forEach(avatar => {
                            avatar.style.marginRight = isCollapsed ? '0' : '0.75rem';
                        });

                        if (!this.isMobile()) {
                            localStorage.setItem('sidebarCollapsed', isCollapsed);
                        }
                    },

                    initializeSidebarState() {
                        if (!this.isMobile()) {
                            const savedState = localStorage.getItem('sidebarCollapsed') === 'true';
                            this.applySidebarState(savedState);
                        }
                    },

                    toggleSidebar() {
                        if (this.isMobile()) return;
                        const isCollapsed = this.elements.sidebar.classList.contains('collapsed');
                        this.applySidebarState(!isCollapsed);
                    },

                    toggleMobileMenu() {
                        if (!this.elements.sidebar || !this.elements.sidebarOverlay) return;
                        this.elements.sidebar.classList.remove('mobile-hidden');
                        this.elements.sidebar.style.transform = 'translateX(0)';
                        this.showOverlay();
                    },

                    hideMobileMenu() {
                        if (!this.isMobile() || !this.elements.sidebar || !this.elements.sidebarOverlay) return;
                        this.elements.sidebar.classList.add('mobile-hidden');
                        this.elements.sidebar.style.transform = 'translateX(-100%)';
                        this.hideOverlay();
                    },

                    showOverlay() {
                        const overlay = this.elements.sidebarOverlay;
                        if (!overlay) return;
                        Object.assign(overlay.style, {
                            position: 'fixed',
                            top: '0',
                            left: '0',
                            width: '100%',
                            height: '100%',
                            backgroundColor: 'rgba(0, 0, 0, 0.5)',
                            zIndex: '999',
                            opacity: '1',
                            visibility: 'visible'
                        });
                    },

                    hideOverlay() {
                        const overlay = this.elements.sidebarOverlay;
                        if (!overlay) return;
                        overlay.style.opacity = '0';
                        overlay.style.visibility = 'hidden';
                    },

                    handleMobileMenu() {
                        if (!this.elements.sidebar || !this.elements.mobileMenuBtn || !this.elements.mainContent) return;

                        const textElements = document.querySelectorAll('.brand-text, .nav-text, .nav-section-title, .user-details');

                        if (this.isMobile()) {
                            this.elements.mobileMenuBtn.style.display = 'block';
                            this.elements.sidebar.classList.add('mobile-hidden');
                            this.elements.sidebar.style.transform = 'translateX(-100%)';
                            this.elements.sidebar.style.width = this.config.expandedWidth;
                            this.elements.mainContent.style.marginLeft = '0';

                            textElements.forEach(el => {
                                el.style.opacity = '1';
                                el.style.width = 'auto';
                                el.style.overflow = 'visible';
                            });
                        } else {
                            this.elements.mobileMenuBtn.style.display = 'none';
                            this.elements.sidebar.classList.remove('mobile-hidden');
                            this.elements.sidebar.style.transform = 'translateX(0)';
                            this.hideOverlay();
                            this.initializeSidebarState();
                        }
                    },

                    setupNavHoverEffects() {
                        const navLinks = document.querySelectorAll('.nav-link:not(.active)');
                        navLinks.forEach(link => {
                            link.addEventListener('mouseenter', () => {
                                link.style.backgroundColor = '#1e293b';
                                link.style.transform = 'translateX(4px)';
                            });
                            link.addEventListener('mouseleave', () => {
                                link.style.backgroundColor = 'transparent';
                                link.style.transform = 'translateX(0)';
                            });
                        });
                    },

                    setupActiveLink() {
                        const currentPath = window.location.pathname;
                        document.querySelectorAll('.nav-link').forEach(link => {
                            if (link.getAttribute('href') === currentPath) {
                                document.querySelectorAll('.nav-link').forEach(l => {
                                    l.classList.remove('active');
                                    l.style.background = 'transparent';
                                });
                                link.classList.add('active');
                                link.style.background = 'linear-gradient(90deg, #002244 0%, #003366 100%)';
                                // Ensure parent dropdown is expanded for active link
                                const parentDropdown = link.closest('.dropdown-menu');
                                if (parentDropdown) {
                                    const parentToggle = parentDropdown.previousElementSibling;
                                    if (parentToggle && parentToggle.classList.contains('dropdown-toggle')) {
                                        parentToggle.classList.add('show');
                                        parentDropdown.classList.add('show');
                                    }
                                }
                            }
                        });
                    }
                };

                document.addEventListener('DOMContentLoaded', () => SidebarManager.init());
            })();
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>